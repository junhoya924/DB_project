<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.courierdeliverysystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.courierdeliverysystem.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.courierdeliverysystem.MapViewActivity" />
        <activity
            android:name="com.example.courierdeliverysystem.PersonalInfo"
            android:label="@string/title_activity_personal_info" >
        </activity>
        <activity
            android:name="com.example.courierdeliverysystem.DeleveryInfo"
            android:label="@string/title_activity_delevery_info" >
        </activity>
        <activity
            android:name="com.example.courierdeliverysystem.CurrentInfo"
            android:label="@string/title_activity_current_info" >
        </activity>
        <activity
            android:name="com.example.courierdeliverysystem.DelManInfo"
            android:label="@string/title_activity_del_man_info" >
        </activity>
        <activity
            android:name="com.example.courierdeliverysystem.DelProductInfo"
            android:label="@string/title_activity_del_product_info" >
        </activity>
        <activity
            android:name="com.example.courierdeliverysystem.NonMemberPage"
            android:label="@string/title_activity_non_member_page" >
        </activity>
    </application>

</manifest>
